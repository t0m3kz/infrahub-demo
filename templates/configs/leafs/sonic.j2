{#- Sonic JSON Leaf Configuration - Using Jinja2 tojson filter for clean JSON -#}
{%- set device_metadata = {
  'localhost': {
    'hostname': hostname,
    'type': 'LeafRouter'
  }
} -%}
{%- if bgp %}
{%- set _ = device_metadata['localhost'].update({'bgp_asn': bgp[0].local_as.asn}) -%}
{%- endif %}

{%- set vlan_config = {} -%}
{%- if vlans and vlans|length > 0 -%}
{%- for vlan in vlans -%}
{%- set _ = vlan_config.update({
  ('Vlan' + vlan.vlan_id|string): {
    'vlanid': vlan.vlan_id|string
  }
}) -%}
{%- endfor -%}
{%- endif %}

{%- set loopback_interfaces = {} -%}
{%- for interface in interfaces -%}
{%- if 'loopback' in interface.name|lower -%}
{%- for ip in interface.ip_addresses -%}
{%- set key = interface.name + '|' + ip.address -%}
{%- set _ = loopback_interfaces.update({key: {}}) -%}
{%- endfor -%}
{%- endif -%}
{%- endfor %}

{%- set physical_interfaces = {} -%}
{%- for interface in interfaces -%}
{%- if 'loopback' not in interface.name|lower -%}
{%- set _ = physical_interfaces.update({interface.name: {}}) -%}
{%- endif -%}
{%- endfor %}

{%- set interface_ips = {} -%}
{%- for interface in interfaces -%}
{%- if 'loopback' not in interface.name|lower and interface.ip_addresses -%}
{%- for ip in interface.ip_addresses -%}
{%- set key = interface.name + '|' + ip.address -%}
{%- set _ = interface_ips.update({key: {}}) -%}
{%- endfor -%}
{%- endif -%}
{%- endfor %}

{%- set vlan_interfaces = {} -%}
{%- if vlans and vlans|length > 0 -%}
{%- for vlan in vlans -%}
{%- set key = 'Vlan' + vlan.vlan_id|string -%}
{%- set _ = vlan_interfaces.update({key: {}}) -%}
{%- endfor -%}
{%- endif %}

{%- set bgp_neighbors = {} -%}
{%- if bgp -%}
{%- for bgp_config in bgp -%}
{%- for session in bgp_config.sessions -%}
{%- set neighbor_ip = session.remote_ip.address.split('/')[0] -%}
{%- set _ = bgp_neighbors.update({
  neighbor_ip: {
    'local_addr': bgp_config.router_id.address.split('/')[0],
    'asn': session.remote_as.asn,
    'holdtime': '10',
    'keepalive': '3'
  }
}) -%}
{%- endfor -%}
{%- endfor -%}
{%- endif %}

{%- set bgp_globals = {
  'default': {}
} -%}
{%- if bgp %}
{%- set _ = bgp_globals['default'].update({
  'router_id': bgp[0].router_id.address.split('/')[0],
  'local_asn': bgp[0].local_as.asn
}) -%}
{%- endif %}

{%- set ospf_router = {} -%}
{%- if ospf -%}
{%- for ospf_config in ospf -%}
{%- set _ = ospf_router.update({
  'default': {
    'router_id': ospf_config.router_id.split('/')[0],
    'reference_bandwidth': ospf_config.reference_bandwidth or 100000
  }
}) -%}
{%- endfor -%}
{%- endif %}

{%- set vxlan_tunnel = {} -%}
{%- if vxlan and vxlan.enabled -%}
{%- set _ = vxlan_tunnel.update({
  vxlan.vxlan_interface: {
    'src_ip': vxlan.vtep.ipv4
  }
}) -%}
{%- endif %}

{%- set vxlan_tunnel_map = {} -%}
{%- if vxlan and vxlan.enabled -%}
{%- if vxlan.l2_vni_mappings -%}
{%- for mapping in vxlan.l2_vni_mappings -%}
{%- set key = vxlan.vxlan_interface + '|map_' + mapping.vni|string + '_Vlan' + mapping.vlan_id|string -%}
{%- set _ = vxlan_tunnel_map.update({
  key: {
    'vlan': 'Vlan' + mapping.vlan_id|string,
    'vni': mapping.vni|string
  }
}) -%}
{%- endfor -%}
{%- endif -%}
{%- if vxlan.l3_vni_mappings -%}
{%- for mapping in vxlan.l3_vni_mappings -%}
{%- set key = vxlan.vxlan_interface + '|map_' + mapping.l3_vni|string + '_' + mapping.vrf_name -%}
{%- set _ = vxlan_tunnel_map.update({
  key: {
    'vrf': mapping.vrf_name,
    'vni': mapping.l3_vni|string
  }
}) -%}
{%- endfor -%}
{%- endif -%}
{%- endif %}

{%- set vrf_config = {} -%}
{%- if vxlan and vxlan.enabled and vxlan.l3_vni_mappings -%}
{%- for mapping in vxlan.l3_vni_mappings -%}
{%- set _ = vrf_config.update({
  mapping.vrf_name: {
    'vni': mapping.l3_vni|string
  }
}) -%}
{%- endfor -%}
{%- endif %}

{%- set vrf_loopback_interfaces = {} -%}
{%- if vxlan and vxlan.enabled and vxlan.vrf_loopbacks -%}
{%- for loopback in vxlan.vrf_loopbacks -%}
{%- set key = loopback.name + '|' + loopback.ip + '/32' -%}
{%- set _ = vrf_loopback_interfaces.update({
  key: {
    'vrf_name': loopback.vrf
  }
}) -%}
{%- endfor -%}
{%- endif %}

{%- set evpn_nvo = {} -%}
{%- if vxlan and vxlan.enabled and vxlan.evpn and vxlan.evpn.enabled -%}
{%- set _ = evpn_nvo.update({
  'nvo1': {
    'source_vtep': vxlan.vxlan_interface
  }
}) -%}
{%- endif %}

{{ {
  'DEVICE_METADATA': device_metadata,
  'VLAN': vlan_config,
  'LOOPBACK_INTERFACE': loopback_interfaces,
  'INTERFACE': physical_interfaces,
  'INTERFACE_IP': interface_ips,
  'VLAN_INTERFACE': vlan_interfaces,
  'BGP_NEIGHBOR': bgp_neighbors,
  'BGP_GLOBALS': bgp_globals,
  'OSPF_ROUTER': ospf_router,
  'VXLAN_TUNNEL': vxlan_tunnel,
  'VXLAN_TUNNEL_MAP': vxlan_tunnel_map,
  'VRF': vrf_config,
  'LOOPBACK_INTERFACE': dict(list(loopback_interfaces.items()) + list(vrf_loopback_interfaces.items())),
  'EVPN_NVO': evpn_nvo
} | tojson(indent=2) }}
